<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:padding="5dp"
    android:gravity="center"
    android:background="#77f0f0f0" >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/popupItemIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:text="@string/btnBuy"
        android:textSize="14sp"
        android:shadowColor="#ffffff"
        android:shadowRadius="5"
        android:id="@+id/popupItemButton"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:background="#d3d9d9d9"
        android:layout_toLeftOf="@+id/popupItemIcon"
        android:layout_toStartOf="@+id/popupItemIcon"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Cost"
        android:textStyle="bold"
        android:textColor="#dddd00"
        android:id="@+id/popupItemCost"
        android:layout_alignLeft="@+id/popupItemIcon"
        android:layout_alignStart="@+id/popupItemIcon"
        android:layout_alignBottom="@+id/popupItemIcon"
        android:shadowRadius="5"
        android:shadowColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="+Prod"
        android:textStyle="bold"
        android:textColor="#dddd00"
        android:id="@+id/popupItemProduction"
        android:layout_alignLeft="@+id/popupItemIcon"
        android:layout_alignStart="@+id/popupItemIcon"
        android:layout_above="@id/popupItemCost"
        android:shadowRadius="5"
        android:shadowColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="xCount"
        android:textStyle="bold"
        android:textColor="#dddd00"
        android:id="@+id/popupItemCount"
        android:layout_alignRight="@+id/popupItemIcon"
        android:layout_alignEnd="@+id/popupItemIcon"
        android:layout_alignTop="@id/popupItemIcon"
        android:shadowRadius="5"
        android:shadowColor="#000000" />
</RelativeLayout>
